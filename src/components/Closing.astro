---
import { UNDANGAN_CONFIG } from '../data/config'
const { brideName, groomName } = UNDANGAN_CONFIG
const namaMempelai = `${brideName} / ${groomName}`
const sponsorImages = UNDANGAN_CONFIG.sponsors

const gridCols = `grid-cols-${sponsorImages.length >= 2 ? '2' : '1'}`
---

<div
  id="closing"
  class="angkasa_slide relative top-0 flex snap-start items-center justify-center overflow-hidden"
  data-section="closing"
>
  <div id="opening-ornaments" class="pointer-events-none absolute inset-0">
    <img
      data-animation-class="animate__fadeInTopLeft"
      class="ornament-item frame-tl animate__slower lazy-load-img absolute top-0 left-0 z-0"
      src="./asset/images/tl.webp"
      onerror="this.src='https://placehold.co/150x150/C6915A/white?text=Top+Left'"
      alt="frame top left"
    />
    <img
      data-animation-class="animate__fadeInTopRight"
      class="ornament-item frame-tr animate__slower lazy-load-img absolute top-0 right-0 z-0"
      src="./asset/images/tr.webp"
      onerror="this.src='https://placehold.co/150x150/C6915A/white?text=Top+Right'"
      alt="frame top right"
    />

    <!-- Ornament Bawah (Center Flower) -->
    <div
      data-animation-class="animate__fadeInBottomLeft"
      class="frame-bl ornament-item animate__slow absolute bottom-0 left-0"
      style="animation-delay: 2.5s"
    >
      <div class="animate-left" style="transform: translate(-29%, -85%)">
        <img
          class="w-100"
          src="./asset/images/bl-1.webp"
          alt="frame"
          style="transform-origin: bottom left"
        />
      </div>
    </div>

    <div
      data-animation-class="animate__fadeInBottomLeft"
      class="frame-bl ornament-item animate__slow absolute bottom-0 left-0"
      style="animation-delay: 2.2s"
    >
      <div class="animate-left" style="transform: translate(-27%, -87%)">
        <img
          class="w-100"
          src="./asset/images/sinta.webp"
          alt="frame"
          style="transform-origin: bottom left; animation-delay: 100ms"
        />
      </div>
    </div>

    <div
      data-animation-class="animate__fadeInBottomLeft"
      class="frame-bl ornament-item animate__slow absolute bottom-0 left-0"
      style="animation-delay: 2s"
    >
      <div class="animate-left" style="transform: translate(-16%, -70%)">
        <img
          class="w-100"
          src="./asset/images/bl-3.webp"
          alt="frame"
          style="transform-origin: bottom left; animation-delay: 300ms"
        />
      </div>
    </div>

    <div
      data-animation-class="animate__fadeInBottomRight"
      class="frame-br ornament-item animate__slow absolute right-0 bottom-0"
      style="animation-delay: 2.5s"
    >
      <div class="animate-right" style="transform: translate(29%, -85%)">
        <img
          class="w-100"
          src="./asset/images/br-1.webp"
          alt="frame"
          style="transform-origin: bottom right"
        />
      </div>
    </div>

    <div
      data-animation-class="animate__fadeInBottomRight"
      class="frame-br ornament-item animate__slow absolute right-0 bottom-0"
      style="animation-delay: 2.2s"
    >
      <div class="animate-right" style="transform: translate(27%, -87%)">
        <img
          class="w-100"
          src="./asset/images/rama.webp"
          alt="frame"
          style="transform-origin: bottom right; animation-delay: 100ms"
        />
      </div>
    </div>

    <div
      data-animation-class="animate__fadeInBottomRight"
      class="frame-br ornament-item animate__slow absolute right-0 bottom-0"
      style="animation-delay: 2s"
    >
      <div class="animate-right" style="transform: translate(16%, -70%)">
        <img
          class="w-100"
          src="./asset/images/br-3.webp"
          alt="frame"
          style="transform-origin: bottom right; animation-delay: 300ms"
        />
      </div>
    </div>

    <div
      class="ornamen-bawah absolute right-0 bottom-0 z-0 w-full md:w-11/12"
      style="transform: translate(0, 0)"
    >
      <div
        data-animation-class="animate__fadeIn"
        class="ornament-item animate__slower"
      >
        <img
          src="./asset/images/bm.webp"
          alt="flowers"
          class="w-full"
          draggable="false"
          onerror="this.src='https://placehold.co/500x200/C6915A/white?text=Bottom+Flowers'"
        />
      </div>
    </div>

    <div
      class="frame-tl ornament-item animate__slower absolute top-0 left-0 z-0"
      data-animation-class="animate__fadeInTopLeft"
    >
      <div class="animate-left" style="transform: translate(-5%, 145%)">
        <img
          class="w-100"
          src="./asset/images/tl-2.webp"
          alt="frame"
          style="transform-origin: bottom left; animation-delay: 120ms"
          onerror="this.src='https://placehold.co/150x150/C6915A/white?text=TL+Secondary'"
        />
      </div>
    </div>

    <div
      class="frame-tr ornament-item animate__slower absolute top-0 right-0 z-0"
      data-animation-class="animate__fadeInTopRight"
    >
      <div class="animate-right" style="transform: translate(5%, 145%)">
        <img
          class="w-100"
          src="./asset/images/tr-2.webp"
          alt="frame"
          style="transform-origin: bottom right; animation-delay: 120ms"
          onerror="this.src='https://placehold.co/150x150/C6915A/white?text=TR+Secondary'"
        />
      </div>
    </div>

    <!-- Wayang Kiri -->
    <div
      class="anim-float-left ornamen-bawah absolute bottom-0 left-0 z-0 w-[50%] translate-x-[0%] translate-y-[10%]"
    >
      <div
        class="ornament-item animate__slower"
        data-animation-class="animate__fadeInBottomLeft"
      >
        <img
          src="./asset/images/bl-2.webp"
          onerror="this.src='https://placehold.co/100x100/C6915A/white?text=Wayang+Kiri'"
          alt="Wayang Kiri"
          class="w-full"
          draggable="false"
        />
      </div>
    </div>
    <!-- Bunga Kiri -->
    <div
      class="anim-float-left ornamen-bawah absolute bottom-0 left-0 z-0 w-[30%] translate-x-[20%] translate-y-[5%]"
    >
      <div
        data-animation-class="animate__fadeInBottomLeft"
        class="ornament-item animate__slower"
      >
        <img
          src="./asset/images/bunga-kiri.webp"
          onerror="this.src='https://placehold.co/100x100/C6915A/white?text=Bunga+Kiri'"
          alt="Bunga Kiri"
          class="w-full"
          draggable="false"
        />
      </div>
    </div>
    <!-- Wayang Kanan -->
    <div
      class="anim-float-right ornamen-bawah absolute right-0 bottom-0 z-0 w-[50%] translate-x-[0%] translate-y-[10%]"
    >
      <div
        data-animation-class="animate__fadeInBottomRight"
        class="ornament-item animate__slower"
      >
        <img
          src="./asset/images/br-2.webp"
          onerror="this.src='https://placehold.co/100x100/C6915A/white?text=Wayang+Kanan'"
          alt="Wayang Kanan"
          class="w-full"
          draggable="false"
        />
      </div>
    </div>
    <!-- Bunga Kanan -->
    <div
      class="anim-float-right ornamen-bawah absolute right-0 bottom-0 z-0 w-[30%] translate-x-[-20%] translate-y-[5%]"
    >
      <div
        data-animation-class="animate__fadeInBottomRight"
        class="ornament-item animate__slower"
      >
        <img
          src="./asset/images/bunga-kanan.webp"
          onerror="this.src='https://placehold.co/100x100/C6915A/white?text=Bunga+Kanan'"
          alt="Bunga Kanan"
          class="w-full"
          draggable="false"
        />
      </div>
    </div>
  </div>
  <div
    class="angkasa_inner flex h-[calc(100dvh-80px)] w-full flex-col justify-center px-6 py-6 pt-10 sm:px-6 sm:py-8"
  >
    <div
      class="blur-card animated-content flex h-full w-full max-w-[540px] flex-col justify-center rounded-3xl bg-(--inv-bg)/30 p-6 shadow-lg backdrop-blur-sm sm:p-8"
    >
      <div
        class="content-layer font-dekor-1 mx-auto w-full max-w-[420px] px-4 py-4 text-center sm:px-6"
      >
        <!-- Judul -->
        <h3
          data-animation-class="animate__fadeInDown"
          class="ornament-item animate__slow font-judul color-accent-2 border-rose-gold mb-4 inline-block border-b pb-2 text-3xl italic"
        >
          âœ¤ Terimakasih âœ¤
        </h3>

        <!-- Paragraf -->
        <p
          data-animation-class="animate__zoomIn"
          class="ornament-item animate__slower text-[15px] leading-relaxed"
        >
          Merupakan suatu kehormatan dan kebahagiaan yang tak terhingga bagi
          kami, apabila Bapak/Ibu, Saudara/i berkenan hadir untuk memberikan
          do'a restu.
        </p>

        <p
          data-animation-class="animate__zoomIn"
          class="ornament-item animate__slower text-[15px] leading-relaxed"
        >
          Semoga Allah SWT senantiasa melimpahkan rahmat-Nya kepada kita semua.
        </p>

        <!-- Nama Mempelai -->
        <div
          data-animation-class="animate__zoomIn"
          class="ornament-item animate__slower animate__delay-1s mt-6"
        >
          <p class="font-judul color-accent text-lg italic">
            Kami yang berbahagia
          </p>
          <h3
            id="couple-names-combined"
            class="font-dekor-2 color-accent pt-2 text-3xl font-semibold tracking-wide"
          >
            {namaMempelai}
          </h3>
          <p class="font-base mt-1 text-sm italic opacity-80">
            (Beserta Keluarga Besar)
          </p>
        </div>

        <!-- Sponsor -->
        <div
          data-animation-class="animate__fadeInUp"
          class="ornament-item animate__slower animate__delay1s mt-12 pt-10 text-center"
        >
          <!-- LABEL -->
          <p
            class="text-color-base mb-6 text-[12px] tracking-widest uppercase opacity-70"
          >
            Supported by
          </p>

          <!-- GRID LOGO -->
          <div
            id="sponsor-container"
            class="grid w-full grid-cols-2 justify-items-center gap-4 sm:grid-cols-4"
          >
            {
              sponsorImages.map((imagePath) => (
                <div class="flex items-center justify-center rounded-xl border border-white/30 bg-white/20 p-2 shadow-sm backdrop-blur-md transition-all hover:bg-white/30">
                  <img
                    src={imagePath}
                    alt="Sponsor Logo"
                    class="max-h-[40px] w-auto opacity-90 sm:max-h-[50px]"
                    loading="lazy"
                  />
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
